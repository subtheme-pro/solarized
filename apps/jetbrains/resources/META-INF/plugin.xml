<idea-plugin>
  <id>solarized</id>
  <name>Solarized</name>
  <version>0.1</version>
  <vendor url="https://subtheme.pro">Thematic</vendor>

  <description>
    <![CDATA[
      The Solarized theme, adapted for JetBrains. Both dark and light themes are included.
      <br/><br/>
      Contribute with GitHub: <a href="https://github.com/subtheme-pro/solarized">https://github.com/subtheme-pro/solarized</a>
      <br/><br/>
      <img src="https://raw.githubusercontent.com/subtheme-pro/solarized/master/apps/jetbrains/screenshots/solarized-light-small.png" border="0" width="320">
      <br/><br/>
      <img src="https://raw.githubusercontent.com/subtheme-pro/solarized/master/apps/jetbrains/screenshots/solarized-dark-small.png" border="0" width="320">
    ]]>
  </description>

  <idea-version since-build="191.0"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <themeProvider id="d9304237-1a55-41ed-beb0-e86bd75439fa" path="/solarized-light.theme.json"/>
    <themeProvider id="0d30d2d3-c1a4-4620-bab0-3ea13421f0e8" path="/solarized-dark.theme.json"/>
  </extensions>
</idea-plugin>